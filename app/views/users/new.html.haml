.main-content
  =render 'shared/mercari-header'
  %main.single-main
    .signin
      .signin__head
        新規会員登録
      .signin__content
        .signin__content__mail
          =link_to "メールアドレスで登録",new_user_registration_path
          %i.far.fa-envelope
        .signin__content__facebook
          =link_to "Facebookでログイン",user_facebook_omniauth_authorize_path
          %i.fab.fa-facebook
        .signin__content__google
          =link_to "Googleでログイン",user_google_oauth2_omniauth_authorize_path
